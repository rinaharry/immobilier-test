{
  "compilerOptions": {
  "rootDirs": ["src"],
  "outDir": "dist",
  "lib": ["es5", "es6", "esnext", "es2016", "es2020"],
  "target": "ESNext",
  "module": "commonjs",
  "moduleResolution": "node",
  "esModuleInterop": true,
  "types": ["node"],
  "forceConsistentCasingInFileNames": true,
  "allowSyntheticDefaultImports": true,
},
"ts-node": {
  "esm": true, // «———— enabling ESM for ts-node   
},
"include": ["src/**/*"],
}